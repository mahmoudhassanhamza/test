#include "stdio.h"

int main(){


	int x;
	do{
		fflush(stdin);
		printf("enter a number \n");
		fflush(stdout);
		scanf("%d",&x);
		fflush(stdin);

		if(x%2)
		{
			printf("%d is odd",x);
			fflush(stdout);


		}
		else
		{
			printf("%d is even",x);
			fflush(stdout);


		}
	}while(getche()!='q');


	return 0;


}

