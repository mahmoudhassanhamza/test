#include "stdio.h"

void Average()
{
	int a[100];
	int x,i;
	int sum=0;
	printf("enter number of elements\n");
	fflush(stdout);
	scanf("%d",&x);
	fflush(stdin);
	printf("enter %d elements\n",x);
		fflush(stdout);

	for (i=0;i<x;i++)
	{
		scanf("%d",&a[i]);
		fflush(stdin);

	}

	for (i=0;i<x;i++)
		sum+=a[i];
	printf("average = %d",sum/x);
	fflush(stdout);

}
